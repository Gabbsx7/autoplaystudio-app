{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd apps/web && npm ci && npm run build",
    "watchPatterns": ["apps/web/**"]
  },
  "deploy": {
    "startCommand": "cd apps/web && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "variables": {
    "NODE_ENV": "production"
  }
}
